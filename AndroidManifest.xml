<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flyingh.smsmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.flyingh.smsmanager.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flyingh.smsmanager.ConversationActivity"
            android:label="@string/title_activity_conversation" >
        </activity>
        <activity
            android:name="com.flyingh.smsmanager.FolderActivity"
            android:label="@string/title_activity_folder" >
        </activity>
        <activity
            android:name="com.flyingh.smsmanager.GroupActivity"
            android:label="@string/title_activity_group" >
        </activity>
        <activity
            android:name="com.flyingh.smsmanager.ConversationDetailActivity"
            android:label="@string/title_activity_conversation_detail" >
        </activity>
        <activity
            android:name="com.flyingh.smsmanager.NewMessageActivity"
            android:label="@string/title_activity_new_message" >
        </activity>
    </application>

</manifest>